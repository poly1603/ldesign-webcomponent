{
  "name": "@ldesign/webcomponent",
  "version": "1.0.0",
  "description": "基于 Stencil 的 Web Component 组件库",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ldesign-webcomponent/ldesign-webcomponent.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js",
      "types": "./loader/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js"
    }
  },
  "files": [
    "dist/",
    "loader/",
    "README.md"
  ],
  "scripts": {
    "build": "stencil build",
    "build:watch": "stencil build --dev --watch",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watchAll",
    "test:e2e": "stencil test --e2e",
    "generate": "stencil generate",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run build && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "dev": "concurrently \"npm run build:watch\" \"npm run docs:dev\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist loader",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "web-components",
    "stencil",
    "ui-components",
    "ldesign",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@stencil/core": "^4.22.2",
    "lucide": "^0.460.0"
  },
  "devDependencies": {
    "@stencil-community/less": "^2.0.0",
    "@stencil/sass": "^3.0.12",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "glob": "^11.0.3",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "less": "^4.2.0",
    "puppeteer": "^21.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2",
    "vitepress": "^1.0.0-rc.31"
  }
}
